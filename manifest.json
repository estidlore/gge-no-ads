{
  "manifest_version": 3,
  "name": "GGE No Ads",
  "description": "Hide GGE Ads",
  "version": "1.0",
  "action": {
    "default_icon": "images/icon128.png"
  },
  "content_scripts": [
    {
      "css": ["styles/gge.css"],
      "js": ["scripts/gge.js"],
      "matches": ["https://empire.goodgamestudios.com/*"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
